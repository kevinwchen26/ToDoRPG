<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.CS429.todorpg"
    android:versionCode="1"
    android:versionName="1.0" >

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:label="tests"
        android:targetPackage="com.CS429.todorpg" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <!-- This permission enables GPS tracking  -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="androdi.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.CS429.todorpg.CharacterCreation"
            android:label="@string/title_activity_character_creation" >
        </activity>
        <activity
            android:name="com.CS429.todorpg.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.CS429.todorpg.LoginActivity"
            android:label="login" >
        </activity>
        <activity
            android:name="com.CS429.todorpg.CreateProfileActivity"
            android:label="new_profile" >
        </activity>
        <activity
            android:name="com.CS429.todorpg.MapActivity"
            android:label="google_map" >
        </activity>
        <activity
            android:name="com.CS429.todorpg.MainPageActivity"
            android:label="@string/title_activity_main_page" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.CS429.todorpg.CharacterProfile"
            android:theme="@android:style/Theme.Dialog"
            android:windowSoftInputMode="stateAlwaysVisible|adjustPan" >
        </activity>
    </application>

</manifest>