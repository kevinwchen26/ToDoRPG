<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/battle_screen"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/battle_border"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/battle_enemy_side"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/battle_enemy_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >
            </ImageView>

            <ImageView
                android:id="@+id/battle_enemy_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >
            </ImageView>

            <ImageView
                android:id="@+id/battle_enemy_status_poison"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_centerInParent="true" >
            </ImageView>

            <ImageView
                android:id="@+id/battle_enemy_status_blind"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_centerInParent="true" >
            </ImageView>

            <ImageView
                android:id="@+id/battle_enemy_status_curse"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_centerInParent="true" >
            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/battle_player_side"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/battle_player_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >
            </ImageView>

            <ImageView
                android:id="@+id/battle_player_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >
            </ImageView>

            <ImageView
                android:id="@+id/battle_player_status_poison"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >
            </ImageView>

            <ImageView
                android:id="@+id/battle_player_status_blind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >
            </ImageView>

            <ImageView
                android:id="@+id/battle_player_status_curse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/battle_navigator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/battle_border"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/battle_enemy_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/battle_border"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/battle_enemy_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/battle_enemy_info_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/battle_action_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/battle_border"
            android:orientation="vertical" >

            <Button
                android:id="@+id/attack_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attack" />

            <Button
                android:id="@+id/change_weapon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:text="@string/change_weapon"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/battle_character_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/battle_border"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/battle_player_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/battle_player_info_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/battle_player_info_mp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/battle_announcement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/battle_border"
            android:textColor="@color/white"
            android:textSize="50px"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>