<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp" >
    
	<TextView android:id="@+id/reward_cost"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical" />
	
	<TextView android:id="@+id/reward_title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/reward_cost"
        android:layout_alignTop="@+id/reward_cost"
         />

	<Button
	    android:id="@+id/purchase_reward"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/reward_title"
	    android:layout_toRightOf="@+id/reward_title"
	    android:text="@string/purchase_reward" />

</RelativeLayout>
