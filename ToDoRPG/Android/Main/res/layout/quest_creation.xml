<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".QuestCreation" >

        <TextView
            android:id="@+id/creation_quest_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quest_title"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/creation_quest_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" >
        </EditText>

        <TextView
            android:id="@+id/creation_quest_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quest_description_text" />

        <EditText
            android:id="@+id/creation_quest_description"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:lines="3" />

        <TextView
            android:id="@+id/creation_quest_duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="due date" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6" >

            <EditText
                android:id="@+id/due_date_edit"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4.5"
                android:background="#FFFFFF"
                android:hint="mm/dd/yyyy"
                android:inputType="date"
                android:textSize="30sp" />

            <Button
                android:id="@+id/due_date"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:text="date" />
        </LinearLayout>

        <Button
            android:id="@+id/creation_alarm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="alarm setting"
            android:textColor="#6ca4bc"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/creation_maximum_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="maximum members" />

        <Spinner
            android:id="@+id/creation_quest_maximum_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/maximum_member"
            android:prompt="@string/maximum_spinner_prompt" />

        <TextView
            android:id="@+id/privacy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacy_text" />

        <RadioGroup
            android:id="@+id/privacy_radios"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/yes_private_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="setPrivacy"
                android:text="Yes" >
            </RadioButton>

            <RadioButton
                android:id="@+id/no_private_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setPrivacy"
                android:text="No" >
            </RadioButton>
        </RadioGroup>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10" >

            <Button
                android:id="@+id/creation_milestone_btn"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/quest_milestone_btn" />

            <Button
                android:id="@+id/creation_quest_submit"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/quest_submit" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>