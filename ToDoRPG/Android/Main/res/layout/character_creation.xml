<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".CharacterCreation" >

            <TextView
                android:id="@+id/character_name_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/character_name" />

            <EditText
                android:id="@+id/character_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/character_name" />

            <ImageView
                android:id="@+id/skin_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/character_name"
                android:layout_centerHorizontal="true"
                android:src="@drawable/dark" 
                android:tag="dark"/>

            <Spinner
                android:id="@+id/character_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/skin_selection"
                android:layout_marginTop="5dp"
                android:background="@drawable/blue_button"
                android:entries="@array/CharacterSelection"
                android:prompt="@string/charter_spinner_prompt" />

            <ImageView
                android:id="@+id/character_image"
                android:layout_width="fill_parent"
                android:layout_height="150sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/stat_1_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="6" >

                <TextView
                    android:id="@+id/str_stat_text"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/str"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/str_stat"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/con_stat_text"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/con"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/con_stat"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/dex_stat_text"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dex"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/dex_stat"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stat_4_6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="6" >

                <TextView
                    android:id="@+id/int_stat_text"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/int_"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/int_stat"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/wis_stat_text"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/wis"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/wis_stat"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/cha_stat_text"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cha"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/cha_stat"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/character_skill_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="10" >

                <ImageView
                    android:id="@+id/skill_1_image"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_weight="3" />

                <TextView
                    android:id="@+id/skill_1_explanation"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="7"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/character_skill_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="10" >

                <ImageView
                    android:id="@+id/skill_2_image"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_weight="3" />

                <TextView
                    android:id="@+id/skill_2_explanation"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="7"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/character_skill_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="10" >

                <ImageView
                    android:id="@+id/skill_3_image"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_weight="3" />

                <TextView
                    android:id="@+id/skill_3_explanation"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="7"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/character_skill_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="10" >

                <ImageView
                    android:id="@+id/skill_4_image"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_weight="3" />

                <TextView
                    android:id="@+id/skill_4_explanation"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="7"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/confirm_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="10" >

                <Button
                    android:id="@+id/create_character_btn"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@drawable/blue_button"
                    android:text="@string/confirm" />

                <Button
                    android:id="@+id/cancel_character_btn"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="5"
                    android:background="@drawable/red_button"
                    android:text="@string/cancel" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/right_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/character_spinner"
                android:layout_below="@+id/character_name"
                android:layout_toRightOf="@+id/skin_selection"
                android:src="@drawable/trans_right_arrow" />

            <ImageButton
                android:id="@+id/left_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/character_spinner"
                android:layout_below="@+id/character_name"
                android:layout_toLeftOf="@+id/skin_selection"
                android:src="@drawable/trans_left_arrow" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>